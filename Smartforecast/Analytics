    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Category Chart
            const categoryChart = echarts.init(document.getElementById('categoryChart'));
            const categoryOption = {
                animation: false,
                tooltip: {
                    trigger: 'item',
                    backgroundColor: 'rgba(255, 255, 255, 0.9)',
                    borderColor: '#E5E7EB',
                    borderWidth: 1,
                    textStyle: {
                        color: '#1f2937'
                    }
                },
                legend: {
                    orient: 'vertical',
                    right: '5%',
                    top: 'center',
                    textStyle: {
                        color: '#1f2937'
                    }
                },
                series: [
                    {
                        name: 'Expense Categories',
                        type: 'pie',
                        radius: ['40%', '70%'],
                        center: ['40%', '50%'],
                        avoidLabelOverlap: false,
                        itemStyle: {
                            borderRadius: 8,
                            borderColor: '#fff',
                            borderWidth: 2
                        },
                        label: {
                            show: false
                        },
                        emphasis: {
                            label: {
                                show: true,
                                fontSize: 14,
                                fontWeight: 'bold'
                            }
                        },
                        labelLine: {
                            show: false
                        },
                        data: [
                            { value: 82350, name: 'Inventory Purchases', itemStyle: { color: 'rgba(87, 181, 231, 1)' } },
                            { value: 35000, name: 'Store Rent', itemStyle: { color: 'rgba(141, 211, 199, 1)' } },
                            { value: 18750, name: 'Utilities', itemStyle: { color: 'rgba(251, 191, 114, 1)' } },
                            { value: 25600, name: 'Staff Wages', itemStyle: { color: 'rgba(252, 141, 98, 1)' } },
                            { value: 6842.75, name: 'Maintenance & Supplies', itemStyle: { color: '#a3a3a3' } }
                        ]
                    }
                ]
            };
            categoryChart.setOption(categoryOption);

            // Initialize Time Chart
            const timeChart = echarts.init(document.getElementById('timeChart'));
            const timeOption = {
                animation: false,
                tooltip: {
                    trigger: 'axis',
                    backgroundColor: 'rgba(255, 255, 255, 0.9)',
                    borderColor: '#E5E7EB',
                    borderWidth: 1,
                    textStyle: {
                        color: '#1f2937'
                    }
                },
                grid: {
                    left: '3%',
                    right: '4%',
                    bottom: '3%',
                    top: '3%',
                    containLabel: true
                },
                xAxis: {
                    type: 'category',
                    boundaryGap: false,
                    data: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
                    axisLine: {
                        lineStyle: {
                            color: '#E5E7EB'
                        }
                    },
                    axisLabel: {
                        color: '#1f2937'
                    }
                },
                yAxis: {
                    type: 'value',
                    axisLine: {
                        show: false
                    },
                    axisLabel: {
                        color: '#1f2937',
                        formatter: function(value) {
                            return 'â‚±' + value.toLocaleString();
                        }
                    },
                    splitLine: {
                        lineStyle: {
                            color: '#E5E7EB'
                        }
                    }
                },
                series: [
                    {
                        name: 'Total Expenses',
                        type: 'line',
                        smooth: true,
                        symbol: 'none',
                        lineStyle: {
                            width: 3,
                            color: 'rgba(87, 181, 231, 1)'
                        },
                        areaStyle: {
                            color: new echarts.graphic.LinearGradient(0, 0, 0, 1, [
                                {
                                    offset: 0,
                                    color: 'rgba(87, 181, 231, 0.3)'
                                },
                                {
                                    offset: 1,
                                    color: 'rgba(87, 181, 231, 0.1)'
                                }
                            ])
                        },
                        data: [182450, 175680, 169320, 192150, 168542.75]
                    }
                ]
            };
            timeChart.setOption(timeOption);

            // Handle window resize
            window.addEventListener('resize', function() {
                categoryChart.resize();
                timeChart.resize();
            });

            // Custom Select Functionality
            const customSelects = document.querySelectorAll('.custom-select');
            customSelects.forEach(select => {
                const selected = select.querySelector('.select-selected');
                const items = select.querySelector('.select-items');
                
                selected.addEventListener('click', function(e) {
                    e.stopPropagation();
                    closeAllSelect(this);
                    items.classList.toggle('select-hide');
                    this.classList.toggle('select-arrow-active');
                });
                
                const selectItems = items.querySelectorAll('.select-item');
                selectItems.forEach(item => {
                    item.addEventListener('click', function() {
                        const selectedText = selected.querySelector('span');
                        selectedText.textContent = this.textContent;
                        items.classList.add('select-hide');
                    });
                });
            });
            
            function closeAllSelect(elmnt) {
                const items = document.querySelectorAll('.select-items');
                const selected = document.querySelectorAll('.select-selected');
                
                items.forEach((item, idx) => {
                    if (elmnt != selected[idx]) {
                        item.classList.add('select-hide');
                        selected[idx].classList.remove('select-arrow-active');
                    }
                });
            }
            
            document.addEventListener('click', closeAllSelect);
        });
    </script>
</body>
